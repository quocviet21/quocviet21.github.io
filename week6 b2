<script>
    function dientich () {
    var bankinh = document.getElementById('bankinh').value;
    alert (bankinh*bankinh*3.14);
    }
    function chuvi () {
        var bankinh = document.getElementById('bankinh').value;
        alert (bankinh*2*3.14 ) ;
    }
</script>
